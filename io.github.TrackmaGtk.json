{
    "app-id" : "io.github.TrackmaGtk",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "3.30",
    "sdk" : "org.gnome.Sdk",
    "command" : "trackma-gtk",
    "build-options" : {
        "build-args" : [
            "--share=network"
        ],
        "env" : {
            "DEBUG" : "true"
        }
    },
    "finish-args" : [
        "--socket=wayland",
        "--socket=fallback-x11",
        "--socket=session-bus",
        "--filesystem=home",
        "--share=network",
        "--share=ipc",
        "--filesystem=xdg-run/dconf",
        "--filesystem=~/.config/dconf:ro",
        "--talk-name=ca.desrt.dconf",
        "--env=DCONF_USER_CONFIG_DIR=.config/dconf"
    ],
    "modules" : [
        {
            "name" : "pillow",
            "buildsystem" : "simple",
            "build-args" : [
                "--share=network"
            ],
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://files.pythonhosted.org/packages/1b/e1/1118d60e9946e4e77872b69c58bc2f28448ec02c99a2ce456cd1a272c5fd/Pillow-5.3.0.tar.gz",
                    "sha256" : "2ea3517cd5779843de8a759c2349a3cd8d3893e03ab47053b66d5ec6f8bc4f93"
                }
            ],
            "build-commands" : [
                "pip3 install --prefix=/app --no-deps ."
            ]
        },
        {
            "name" : "trackma-gtk",
            "buildsystem" : "simple",
            "build-args" : [
                "--share=network"
            ],
            "sources":[
                {
                    "type": "git",
                    "url": "https://github.com/z411/trackma.git"
                }
            ],
            "build-commands" : [
                "python3 setup.py install --prefix=/app"
            ]
        }
    ]
}